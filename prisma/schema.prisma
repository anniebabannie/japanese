// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lesson {
  id          String   @id @default(cuid())
  title       String
  description String
  story       String   @default("Story content will be generated for new lessons.")
  level       JLPTLevel
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  grammarPoints   GrammarPoint[]
  vocabulary      Vocabulary[]
  questions       Question[]
}

model GrammarPoint {
  id          String   @id @default(cuid())
  lessonId    String
  lesson      Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  point       String
  explanation String
  examples    String[]
  order       Int
}

model Vocabulary {
  id          String   @id @default(cuid())
  lessonId    String
  lesson      Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  word        String
  reading     String?
  meaning     String
  order       Int
}

model Question {
  id          String       @id @default(cuid())
  lessonId    String
  lesson      Lesson       @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  question    String
  answer      String
  options     String[]
  type        QuestionType
  explanation String?
  order       Int
}

enum JLPTLevel {
  N5
  N4
  N3
  N2
  N1
}

enum QuestionType {
  MULTIPLE_CHOICE
  FILL_IN_BLANK
  TRANSLATION
}
